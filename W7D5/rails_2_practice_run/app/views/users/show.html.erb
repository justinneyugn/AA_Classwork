<div>
    <ul>
        <% @user.goals.each do |goal| %>
            <li>
                <%= goal.name %>
                <%= goal.details %>
                <% if goal.status %>
                    <p>Done</p>
                <% end %>
                <form action = "<%= goal_url%>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <button>Delete Goal<button>
                </form>
            </li>
        <% end %>
    </ul>
</div>

<h1>Add a New Goal</h1>
<form action="<%= user_goals_url(@user)%>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <label>Name
    <input type="text" name="goal[name]">
    </label>
    <label>Details
    <input type="text" name="goal[details]">
    </label>

    <h1>Is this complete?</h1>
    <label>True 
        <input type="radio" name="goal[status]" value="true">
    </label>
    <label>False
        <input type="radio" name="goal[status]" value="false">
    </label>
    <button>Create Goal</button>
</form>
